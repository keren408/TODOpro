<UserControl x:Class="PL.Views.ColorPlatte"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PL.Views"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button  Background = "#c62828" Width="34" Height="50"  Grid.Column="0" Click="Button_Click"/>
        <Button  Background = "#ffc400" Width="34" Height="50" Grid.Column="1" Click="Button_Click_1"/>
        <Button  Background = "#00c853" Width="34" Height="50" Grid.Column="2" Click="Button_Click_2"/>
        <Button  Background = "#2979ff" Width="34" Height="50" Grid.Column="3" Click="Button_Click_4"/>
        <Button  Background = "#f50057" Width="34" Height="50" Grid.Column="4" Click="Button_Click_5"/>
        <Button  Background = "#aa00ff" Width="34" Height="50" Grid.Column="5" Click="Button_Click_3"/>

    </Grid>
</UserControl>
